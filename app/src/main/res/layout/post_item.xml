<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

        <View
            android:id="@+id/user_profile"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/circle"
            android:layout_marginVertical="20dp"
            android:layout_marginHorizontal="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />
        <TextView
            android:id="@+id/post_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text = "Unblast"
            android:textStyle="bold|normal"
            android:textSize="28sp"
            android:layout_marginHorizontal="10dp"
            android:fontFamily="@font/klavika_bold"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@+id/user_profile"
            app:layout_constraintTop_toTopOf="@+id/user_profile"/>
        <TextView
            android:id="@+id/post_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2 hrs ."
            android:textColor="@color/light_gray"
            android:textSize="24sp"
            android:fontFamily="@font/klavika_bold"
            app:layout_constraintTop_toBottomOf="@+id/post_title"
            app:layout_constraintStart_toStartOf="@+id/post_title"
            />

        <ImageView
            android:id="@+id/globe_icon"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/globe_icon"
            app:layout_constraintTop_toTopOf="@+id/post_time"
            app:layout_constraintBottom_toBottomOf="@+id/post_time"
            app:layout_constraintStart_toEndOf="@+id/post_time"
            android:adjustViewBounds="true" />
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/settings"
            android:layout_marginHorizontal="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/globe_icon"
            app:layout_constraintBottom_toBottomOf="@id/globe_icon"
            android:adjustViewBounds="true"
            />
        <TextView
            android:id="@+id/post_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Buckle up, because change is coming to WordPress"
            android:textSize="20sp"
            android:textStyle="bold"
            android:fontFamily="@font/klavika_bold"
            android:layout_marginVertical="25dp"
            app:layout_constraintTop_toBottomOf="@+id/user_profile"
            app:layout_constraintStart_toStartOf="@+id/user_profile"/>
        <TextView
            android:id="@+id/post_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="http://unblast.com/color-schemes"
            android:autoLink="web"
            android:textColorLink="@color/purple_700"
            android:textSize="20sp"
            android:fontFamily="@font/klavika_bold"
            app:layout_constraintTop_toBottomOf="@+id/post_header"
            app:layout_constraintStart_toStartOf="@+id/post_header"
            />
        <View
            android:id="@+id/post_image"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:background="@drawable/post_image"
            android:layout_marginVertical="10dp"
            app:layout_constraintTop_toBottomOf="@+id/post_link"
            />
        <ImageView
            android:id="@+id/like_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/likeblue"
            android:layout_margin="10dp"
            app:layout_constraintTop_toBottomOf="@+id/post_image"
            app:layout_constraintStart_toStartOf="parent"
            android:adjustViewBounds="true"
            />
        <TextView
            android:id="@+id/likes_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12"
            android:fontFamily="@font/klavika_bold"
            android:textSize="18sp"
            android:textColor="@color/light_gray"
            android:layout_marginHorizontal="6dp"
            app:layout_constraintStart_toEndOf="@+id/like_icon"
            app:layout_constraintTop_toTopOf="@+id/like_icon"
            app:layout_constraintBottom_toBottomOf="@+id/like_icon"
            />
        <TextView
            android:id="@+id/share_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1 Share"
            android:fontFamily="@font/klavika_bold"
            android:textSize="18sp"
            android:textColor="@color/light_gray"
            android:layout_marginHorizontal="70dp"
            app:layout_constraintTop_toTopOf="@+id/like_icon"
            app:layout_constraintBottom_toBottomOf="@+id/like_icon"
            app:layout_constraintEnd_toEndOf="parent"
            />
        <View
            android:id="@+id/share_profile"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/circle"

            android:layout_marginHorizontal="20dp"
            app:layout_constraintTop_toTopOf="@+id/share_number"
            app:layout_constraintBottom_toBottomOf="@+id/share_number"
            app:layout_constraintStart_toEndOf="@+id/share_number"/>

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/dropdown_icon"
            app:layout_constraintStart_toEndOf="@+id/share_profile"
            app:layout_constraintTop_toTopOf="@+id/share_profile"
            app:layout_constraintBottom_toBottomOf="@+id/share_profile"
            android:adjustViewBounds="true"
            />
        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/divider"
            android:layout_marginVertical="30dp"
            app:layout_constraintTop_toBottomOf="@+id/like_icon"
            />

        <ImageView
            android:id="@+id/blackLike"
            android:layout_width="25dp"
            android:layout_height="30dp"
            android:src="@drawable/blacklike"
            android:layout_marginVertical="16dp"
            app:layout_constraintTop_toBottomOf="@+id/divider"
            app:layout_constraintStart_toStartOf="@id/likes_number"
            />
        <TextView
            android:id="@+id/like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Like"
            android:textColor="@color/light_gray"
            android:fontFamily="@font/klavika_bold"
            android:textSize="20sp"
            android:layout_marginHorizontal="10dp"
            app:layout_constraintStart_toEndOf="@+id/blackLike"
            app:layout_constraintTop_toTopOf="@+id/blackLike"
            app:layout_constraintBottom_toBottomOf="@+id/blackLike"
            />
        <ImageView
            android:id="@+id/comment_icon"
            android:layout_width="25dp"
            android:layout_height="30dp"
            android:src="@drawable/comment_icon"
            android:layout_marginHorizontal="40dp"
            app:layout_constraintTop_toTopOf="@+id/blackLike"
            app:layout_constraintBottom_toBottomOf="@+id/blackLike"
            app:layout_constraintStart_toEndOf="@+id/like"/>
        <TextView
            android:id="@+id/comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Comment"
            android:textColor="@color/light_gray"
            android:fontFamily="@font/klavika_bold"
            android:textSize="20sp"
            android:layout_marginHorizontal="10sp"
            app:layout_constraintStart_toEndOf="@+id/comment_icon"
            app:layout_constraintTop_toTopOf="@+id/comment_icon"
            />
        <ImageView
            android:id="@+id/share_icon"
            android:layout_width="25dp"
            android:layout_height="30dp"
            android:src="@drawable/share"
            android:layout_marginHorizontal="40dp"
            app:layout_constraintTop_toTopOf="@+id/comment_icon"
            app:layout_constraintBottom_toBottomOf="@+id/comment_icon"
            app:layout_constraintStart_toEndOf="@+id/comment"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Share"
            android:textColor="@color/light_gray"
            android:fontFamily="@font/klavika_bold"
            android:textSize="20sp"
            android:layout_marginHorizontal="10sp"
            app:layout_constraintStart_toEndOf="@+id/share_icon"
            app:layout_constraintTop_toTopOf="@+id/share_icon"
            />


        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/user_barrier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="bottom"
            app:constraint_referenced_ids="blackLike , comment_icon , share_icon"/>




</androidx.constraintlayout.widget.ConstraintLayout>
